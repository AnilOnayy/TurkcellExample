@model ProductViewModel

<div class="mb-3">
    <label asp-for="Name" class="form-label">Ürün Adı</label>
    <input asp-for="Name" class="form-control" placeholder="Ürününüzün Adını Girin">
    <span class="text-danger " asp-validation-for="Name"></span>
</div>
<div class="mb-3">
    <label asp-for="Price" class="form-label">Ürün Fiyatı</label>
    <input asp-for="Price" class="form-control" placeholder="Ürününüzün Fiyatını Girin">
    <span class="text-danger " asp-validation-for="Price"></span>

</div>
<div class="mb-3">
    <label asp-for="Stock" class="form-label">Ürün Stok</label>
    <input asp-for="Stock" class="form-control" placeholder="Ürününüzün Stok Adedini Girin">
    <span class="text-danger " asp-validation-for="Stock"></span>

</div>





<select class="form-select mb-3" asp-for="Color" asp-items="@ViewBag.ColorSelects">
    <option value="" disabled hidden>Renk Seçiniz</option>
</select>
<span class="text-danger " asp-validation-for="Color"></span>





<div class="form-check">
    <input class="form-check-input" asp-for="IsPublish">
    <label class="form-check-label" asp-for="IsPublish">
        Yayınlansın mı ?
    </label>
</div>

<div class="d-flex gap-3">
    @foreach (var i in ViewBag.Expire as Dictionary<string, int>)
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" id="@(i.Value)-Exp" asp-for="Expire" value="@i.Key">
            <label class="form-check-label" for="@(i.Value)-Exp" asp-for="Expire">
                @i.Value
            </label>
        </div>

    }
</div>

<div class="form-group my-3-2">
    <label asp-for="Description">Example textarea</label>
    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
</div>

<div class="mb-3">
    <label asp-for="CreatedTime" class="form-label">Ürün Tarihi</label>
    <input type="date" asp-for="CreatedTime" class="form-control" placeholder="Ürünün Yayınlanma Tarihi">
    <span class="text-danger " asp-validation-for="CreatedTime"></span>
</div>


<div class="mb-3">
    <label asp-for="Email" class="form-label">Ürün E-Maili</label>
    <input  asp-for="Email" class="form-control" placeholder="İlgili ürün e-Maili">
    <span class="text-danger " asp-validation-for="Email"></span>
</div>



<div class="mb-3">
    <label asp-for="Phone" class="form-label">Ürün Telefon Numarası</label>
    <input  asp-for="Phone" class="form-control" placeholder="İlgili ürün telefon numarası.">
    <span class="text-danger " asp-validation-for="Phone"></span>
</div>

