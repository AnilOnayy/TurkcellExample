@{
}

@model ProductViewModel

    
<a asp-controller="product" asp-action="index" class="btn btn-warning">Ürünlere Geri Dön</a>

<div class="card">
  <div class="card-header">
    Id :  @Model.Id
  </div>
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">@Model.Description</p>
        <div>Fiyat : @Model.Price</div>
        <div>Stok: @Model.Stock</div>
        <div>Renk : @Model.Color</div>
        <div>Satışta mı ? : @(Model.IsPublish ? "Evet" : "Hayır") </div>
  </div>
</div>
