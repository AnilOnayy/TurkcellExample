@model Product


<h1>Update Product</h1>

<form asp-action="Update" method="POST">
    <div>
        <input type="hidden" asp-for="Id" />
    </div>
    <div>
        <label class="form-label">Ürün Adı </label>
        <input type="text" asp-for="Name" />
    </div>
    <div>
        <label class="form-label">Ürün Fiyatı </label>
        <input type="text" asp-for="Price" />
    </div>
    <div>
        <label class="form-label">Ürün Stoğu </label>
        <input type="text" asp-for="Stock" />
    </div>
    <div>
        <label class="form-label">Ürün Rengi </label>
        <input type="text" asp-for="Color" />
    </div>
    <div>
        <label class="form-label">Ürün Yılı </label>
        <input type="text" asp-for="Year" />
    </div>

    <div class="mt-3">
        <button class="btn btn-primary btn-md" type="submit">Kaydet</button>
    </div>

</form>

