@using TurkcellExample.ViewModels
@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers

@model ProductListPartialViewModel

<table class="table table-dark table-striped">

    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in @Model.Products as List<ProductListModel>)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Stock</td>
                <td>
                    <a class="btn btn-warning" asp-action="update" asp-controller="product" asp-route-id="@p.Id">Güncelle</a>
                    <a class="btn btn-danger" asp-action="delete" asp-controller="product" asp-route-id="@p.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
